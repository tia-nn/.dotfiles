# Command Alias Set

alias cp='cp -r'
alias cl='clear'
alias l='ls -alh'
alias la='ls -a'
alias untgz='tar zxvf'
alias untxz='tar Jxvf'
alias mktgz='tar zcvf'
alias unzips='unzip -O sjis'
alias nano='nano -w'
alias pingo='ping -c 3 google.com'

