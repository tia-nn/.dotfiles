# Command Alias Set

alias cp='cp -r'
alias cl='clear'
alias l='ls -alh'
alias la='ls -a'
alias untgz='tar zxvf'
alias untxz='tar Jxvf'
alias mktgz='tar zcvf'
alias unzips='unzip -O sjis'
alias nano='nano -w'
alias pingo='ping -c 3 google.com'

alias d='dnf'
alias di='sudo dnf -y install'
alias du='sudo dnf -y update'
alias ds='dnf search'
alias drm='dnf remove'

alias pod='podman'
alias pimg='podman images'
alias pbld='podman build'
alias prun='podman run'
alias pexe='podman exec'
alias prm='podman rm'
alias prmc='podman rm'
alias prmi='podman rmi'
alias pps='podman ps -a'
alias pst='podman start'
alias pstp='podman stop'
alias prest='podman restart'
alias ppl='podman pull'

alias g='git'

alias gcl='git clone'
alias gini='git init'

alias ga='git add'
alias gaa='git add -A'
alias gmv='git mv'
alias grst='git restore'
alias grm='git rm'
alias gsch='git sparse-checkout'

alias gbis='git bisect'
alias gd='git diff'
alias gg='git grep'
alias gl='git log'
alias glg='git log --graph --oneline --all'
alias gsh='git show'
alias gs='git status'

alias gb='git branch'
alias gc='git commit'
alias gm='git merge'
alias grb='git rebase'
alias grs='git reset'
alias gsw='git switch'
alias gtag='git tag'

alias gf='git fetch'
alias gpl='git pull'
alias gps='git push'

alias gst='git stash'
alias gsm='git submodule'
alias grmt='git remote'
